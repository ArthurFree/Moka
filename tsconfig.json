{
    "compilerOptions": {
        "outDir": "./dist",
        "module": "esnext",
        "target": "es5",
        "lib": ["esnext", "dom", "dom.iterable"],
        "skipLibCheck": true,
        "sourceMap": true,
        "allowJs": true,
        "jsx": "react",
        "moduleResolution": "node",
        // "noImplicitReturns": true,
        // "noImplicitThis": true,
        // "noImplicitAny": true,
        // "strictNullChecks": true,
        "baseUrl": "./",
        "rootDir": "./",
        "typeRoots": ["./node_modules/@types", "./src/@types"],
        "paths": {
            "@/*": ["src/editor/*"],
            "@toastmark/*": ["src/toastmark/*"],
            "@editorType/*": ["src/@types/editor/*"],
            "@toastmarkType/*": ["src/@types/toastmark/*"],

            "@editorPlugins/*": ["src/editorPlugins/*"],
            "@pluginHighlightType/*": ["src/@types/code-syntax-highlight-plugin/*"],
            "@pluginChartType/*": ["src/@types/chart-plugin/*"],
            "@pluginColorSyntax/*": ["src/@types/color-syntax-plugin/*"],
            "@pluginTableMergedCell/*": ["src/@types/table-merged-cell-plugin/*"],
            // "@t/*": ["src/@types/editor/*"],
            // "@toast/*": ["src/@types/toastmark/*"],
            // "@codeType/*": ["src/@types/code-syntax-highlight-plugin/*"],
            "@src/*": ["src/*"],
            "@assets/*": ["src/assets/*"],
            "@svg/*": ["src/assets/svg/*"],
            "@styles/*": ["src/styles/*"],
            "@components/*": ["src/components/*"],
            "@view/*": ["src/view/*"]
        },
        "declaration": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "importHelpers": true
        // "importsNotUsedAsValues": "preserve",
        // "incremental": true
    },
    "include": ["src/**/*.ts", "src/**/*.tsx"],
    "exclude": ["**/node_modules", "**/.*/", "src/assets"]
}
