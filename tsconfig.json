{
    "compilerOptions": {
        "outDir": "./dist",
        "module": "esnext",
        "target": "es5",
        "lib": ["dom", "ESNext"],
        "sourceMap": true,
        "allowJs": true,
        "jsx": "react",
        "moduleResolution": "node",
        // "noImplicitReturns": true,
        // "noImplicitThis": true,
        "noImplicitAny": true,
        // "strictNullChecks": true,
        "baseUrl": "./",
        "rootDir": "./",
        "typeRoots": ["./node_modules/@types", "./src/@types"],
        "paths": {
            "@src/*": ["src/*"],
            "@images/*": ["src/images/*"],
            "@styles/*": ["src/styles/*"],
            "@components/*": ["src/components/*"],
            "@view/*": ["src/view/*"]
        },
        "declaration": true,
        "allowSyntheticDefaultImports": true,
        // "esModuleInterop": true,
        // "importsNotUsedAsValues": "preserve",
        // "incremental": true
    },
    "include": ["src"],
    "exclude": ["**/node_modules", "**/.*/"]
}
